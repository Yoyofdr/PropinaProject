---
const supportedLangs = [
  'es','en','fr','pt','de','zh','ru','ar','hi','ja','ko','tr','it','pl','nl','vi','sv','fi','el','th','he','hu','id','ms','ta','uk','ro','cs','da','fa','ur','sr','bg','sk','hr','nb','fil','bn','gu','ml'
];
const lang = (Astro.request.headers.get('accept-language') || 'en').slice(0,2);
const translations = {
  en: {
    title: 'Page Not Found',
    message: 'Sorry, the page you are looking for does not exist.',
    back: 'Back to home'
  },
  es: {
    title: 'Página no encontrada',
    message: 'Lo sentimos, la página que buscas no existe.',
    back: 'Volver al inicio'
  },
  fr: {
    title: 'Page non trouvée',
    message: 'Désolé, la page que vous cherchez n'existe pas.',
    back: 'Retour à l'accueil'
  }
};
const t = translations[lang] || translations['en'];
---
<html lang={lang}>
  <head>
    <title>{t.title} | Global Tip Calculator</title>
    <meta name="robots" content="noindex" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  </head>
  <body style="text-align:center; padding:4em 1em;">
    <h1>{t.title}</h1>
    <p>{t.message}</p>
    <a href="/">{t.back}</a>
  </body>
</html> 