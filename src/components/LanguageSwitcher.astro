---
const { availableLangs, currentLang, countrySlug, translations } = Astro.props;
---
<div class="language-switcher">
  <label>{translations["change_language"]}:</label>
  <ul>
    {availableLangs.map(lang => (
      <li>
        <a href={`/${lang}/${countrySlug}`} hreflang={lang} rel="alternate" aria-current={lang === currentLang ? 'page' : undefined}>
          {lang.toUpperCase()}
        </a>
      </li>
    ))}
  </ul>
</div>
<style>
.language-switcher { margin: 1em 0; }
.language-switcher ul { list-style: none; padding: 0; display: flex; gap: 0.5em; }
.language-switcher a { text-decoration: none; padding: 0.2em 0.6em; border-radius: 4px; }
.language-switcher a[aria-current="page"] { background: #eee; font-weight: bold; }
</style>
