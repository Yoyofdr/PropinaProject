---
// Página de inicio con autodetección de idioma y redirección
const supportedLangs = [
  'es','en','fr','pt','de','zh','ru','ar','hi','ja','ko','tr','it','pl','nl','vi','sv','fi','el','th','he','hu','id','ms','ta','uk','ro','cs','da','fa','ur','sr','bg','sk','hr','nb','fil','bn','gu','ml'
];
const defaultLang = 'en';
const defaultCountry = 'united-states-of-america';
---
<html lang="en">
  <head>
    <meta http-equiv="refresh" content="0; url=/${defaultLang}/tipping-in-${defaultCountry}" />
    <script>
      (function() {
        const supported = new Set(["es","en","fr","pt","de","zh","ru","ar","hi","ja","ko","tr","it","pl","nl","vi","sv","fi","el","th","he","hu","id","ms","ta","uk","ro","cs","da","fa","ur","sr","bg","sk","hr","nb","fil","bn","gu","ml"]);
        const navLang = (navigator.language || navigator.userLanguage || '').slice(0,2);
        const lang = supported.has(navLang) ? navLang : 'en';
        // Puedes mejorar esto para detectar país por IP si lo deseas
        window.location.replace(`/${lang}/tipping-in-${defaultCountry}`);
      })();
    </script>
    <title>Calculadora de Propinas Global</title>
    <meta name="description" content="Descubre cuánto dejar de propina en cualquier país del mundo. Calculadora interactiva y datos por servicio." />
  </head>
  <body>
    <noscript>
      <h1>Calculadora de Propinas Global</h1>
      <p>Redirigiendo a la versión en inglés...</p>
    </noscript>
  </body>
</html> 